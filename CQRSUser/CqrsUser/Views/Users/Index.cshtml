@model IEnumerable<CqrsUser.Domain.User>

    @{
    ViewData["Title"] = "Users List";
    }

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa; /* light gray */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 2rem 0;
            color: #212529; /* Bootstrap text-dark */
        }

        .container-card {
            max-width: 900px;
            margin: 0 auto;
            background: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 2rem 2.5rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

            .header h2 {
                font-weight: 600;
                font-size: 1.8rem;
                color: #0d6efd; /* Bootstrap primary */
                user-select: none;
            }

        .btn-add-user {
            background-color: #0d6efd;
            color: white;
            border: none;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 0.375rem;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-add-user:hover,
            .btn-add-user:focus {
                background-color: #0b5ed7;
                color: white;
                text-decoration: none;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background-color: #e9ecef;
        }

            thead th {
                padding: 0.75rem 1rem;
                text-align: left;
                font-weight: 600;
                border-bottom: 2px solid #dee2e6;
                color: #495057;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.05em;
            }

        tbody tr {
            border-bottom: 1px solid #dee2e6;
        }

            tbody tr:hover {
                background-color: #f1f3f5;
                cursor: pointer;
            }

        tbody td {
            padding: 0.75rem 1rem;
            vertical-align: middle;
            color: #212529;
        }

        .btn-action {
            color: #0d6efd;
            border: none;
            background: none;
            padding: 0.25rem 0.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: color 0.2s ease;
        }

            .btn-action:hover,
            .btn-action:focus {
                color: #0a58ca;
                text-decoration: underline;
            }

            .btn-action svg {
                vertical-align: middle;
            }
    </style>

    <div class="container-card">
        <div class="header">
            <h2>👥 Users List</h2>
            <a href="/UsersMvc/Create" class="btn-add-user" title="Add New User" data-bs-toggle="tooltip" data-bs-placement="bottom">
                <span style="font-size:1.2rem;">➕</span> Add User
            </a>
        </div>

        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 20%;">First Name</th>
                        <th style="width: 20%;">Last Name</th>
                        <th style="width: 30%;">Email</th>
                        <th style="width: 15%;">Created At</th>
                        <th style="width: 10%; text-align:center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserNumber</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td style="text-align:center;">
                            <a href="/UsersMvc/Details/@user.Id" class="btn-action" title="View Details" data-bs-toggle="tooltip" data-bs-placement="top">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8z" />
                                    <path d="M8 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Enable Bootstrap tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
